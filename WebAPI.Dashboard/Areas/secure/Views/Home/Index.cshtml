@{
    ViewBag.Title = "AGRC Web API User Console";
}
@model WebAPI.Dashboard.Models.ViewModels.MainViewModel
<div class="col-sm-offset-3 col-sm-6 col-xs-10 col-xs-offset-1">
    @Html.ErrorBox()
    @Html.MessageBox()
</div>
<div class="row">
    <div class="col-sm-offset-1 col-sm-3 text-center" style="margin-top: 55px; padding-bottom: 55px;">
        @Html.ActionLink("Manage my API Keys", "Index", new
        {
            Controller = "KeyManagement"
        }, new
        {
            @class = "btn btn-primary btn-lg"
        })
    </div>
    <div class="col-sm-offset-1 col-sm-3 text-center">
        <div style="padding: 5px 10px;">
            <p>
                <span class="badge badge-success badge-large">@Model.ApiKeyUsage.UsageCount.ToString("##,#0")</span>
            </p>
            API requests to date.
            <hr />
            <p>
                Keys Used
            </p>
            <span class="badge badge-success badge-large">@Model.KeyQuota.KeysUsed</span>
        </div>
    </div>
    <div class="col-sm-offset-1 col-sm-3 text-center" style="padding: 55px 0;">
        @Html.ActionLink("Manage my Information", "Index", new
        {
            Controller = "Profile"
        }, new
        {
            @class = "btn btn-primary btn-lg"
        })
    </div>
</div>