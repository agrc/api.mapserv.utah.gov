@model WebAPI.API.Models.ViewModels.MainView
<div class="well">
    <span class="label label-verb label-get pull-left">Get</span> <span class="label label-url url pull-right">
                                                                      /info/FeatureCount/:featureClass</span>
    <div class="clearfix">
    </div>
    <h3>
        Feature Count</h3>
    <p>
        Returns the number of features in a feature class.</p>
    <button class="btn" data-details="true">
        Details</button>
    <span class="help-inline label label-important label-status pull-right">not implemented</span>
    <div class="clearfix">
    </div>
    <form class="form-horizontal hide">
        <fieldset>
            <legend class="hidden"></legend>
            <div class="control-group">
                <label class="control-label" for="featureClass">
                    featureClass</label>
                <div class="controls">
                    <input type="text" id="featureClass" name="featureClass" class="input-large" data-required />
                    <span class="help-inline label label-info">string</span> <span class="help-inline label label-important">
                                                                                 required</span>
                    <p class="help-block">
                        Fully qualified feature class name eg: SGID93.Boundaries.Counties.</p>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="sgidVersion">
                    version</label>
                <div class="controls">
                    @Html.DropDownList("sgidVersion", Model.SgidVersion, "Version", new
                    {
                        @class = "input-large"
                    })
                    <span class="help-inline label label-info">number</span> <span class="help-inline label label-success">
                                                                                 optional</span>
                    <p class="help-block">
                        AGRC will normally run two or more versions of the SGID to cater to its users while
                        upgrading versions of the SGID. These versions are often different in structure
                        as AGRC makes improvements. If this parameter is omitted the most current version
                        will be used.</p>
                </div>
            </div>
        </fieldset>
        <div class="progress-striped active" style="width: auto;">
             <button class="btn btn-primary" 
                    data-demo data-url="">
                Try it</button>
        </div>
        <div class="code-well">
            <a class="close" data-close>×</a>
            <div class="clearfix">
            </div>
            <pre class="pre-scrollable-small" data-codeContainer>Code</pre>
        </div>
    </form>
</div>