@model WebAPI.API.Models.ViewModels.MainView
<div class="well">
    <span class="label label-verb label-get pull-left">Get</span> <span class="label label-url url pull-right">
                                                                      /info/FeatureCount/:featureClass</span>
    <div class="clearfix">
    </div>
    <h3>
        Feature Count
    </h3>
    <p>
        Returns the number of features in a feature class.
    </p>
    <button class="btn btn-default" data-details="true">
        Details
    </button>
    <span class="help-inline label label-danger label-status pull-right">not implemented</span>
    <div class="clearfix">
    </div>
    <form class="form-horizontal" style="display: none">
        <fieldset>
            <legend class="hidden"></legend>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="featureClass">
                    featureClass
                </label>
                <div class="col-sm-8">
                    <input type="text" id="featureClass" name="featureClass" class="form-control" data-required/>
                    <span class="help-inline label label-info">string</span> <span class="help-inline label label-danger">
                                                                                 required</span>
                    <p class="help-block">
                        Fully qualified feature class name eg: SGID93.Boundaries.Counties.
                    </p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="sgidVersion">
                    version
                </label>
                <div class="col-sm-8">
                    @Html.DropDownList("sgidVersion", Model.SgidVersion, "Version", new
                    {
                        @class = "form-control"
                    })
                    <span class="help-inline label label-info">number</span> <span class="help-inline label label-success">
                                                                                 optional</span>
                    <p class="help-block">
                        UGRC will occasionally run two or more versions of the SGID to cater to its users while
                        upgrading versions of the SGID. These versions are often different in structure
                        as UGRC makes improvements. If this parameter is omitted the most current version
                        will be used.
                    </p>
                </div>
            </div>
        </fieldset>
        <div class="progress-striped active col-sm-offset-2 col-sm-8 col-xs-12">
            <button class="btn btn-primary col-sm-offset-2 col-sm-8 col-xs-12" data-demo data-url="">
                Try it
            </button>
        </div>
        <div class="code-well">
            <a class="close" data-close>×</a>
            <div class="clearfix">
            </div>
            <pre class="pre-scrollable-small" data-codeContainer>Code</pre>
        </div>
    </form>
</div>