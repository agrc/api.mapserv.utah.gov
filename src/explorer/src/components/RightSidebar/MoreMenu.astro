---
import ThemeToggleButton from "./ThemeToggleButton";

type Props = {
  editHref: string;
};

const { editHref } = Astro.props;
const showMoreSection = Boolean(false);
---

{showMoreSection && <h2 class="heading">More</h2>}
<ul>
  {
    editHref && (
      <li
        style="padding-inline-start: 1rem"
        class="py-6 hover:bg-slate-200/50 dark:hover:bg-slate-900/50 inline-flex gap-2 w-full leading-snug border-l-4 border-l-wavy-600 hover:border-l-wavy-200 dark:border-l-wavy-500 dark:hover:border-l-wavy-800 transition-all"
      >
        <a
          class="flex gap-2 items-center edit-on-github"
          href={editHref}
          target="_blank"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6 opacity-60 hover:opacity-80"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
            />
          </svg>
          <span>Edit this page</span>
        </a>
      </li>
    )
  }
</ul>
<div style="margin: 2rem 0; text-align: center;">
  <ThemeToggleButton client:visible />
</div>

<style>
  .edit-on-github {
    text-decoration: none;
    font: inherit;
    color: inherit;
    font-size: 1rem;
  }
</style>
