---
type Props = {
  href: string;
  text: string;
};

const { href, text } = Astro.props;
---

<a
  href={href}
  class="border-secondary-900 bg-secondary-700 hover:border-secondary-900 hover:bg-secondary-800 focus:border-secondary-600 focus:ring-secondary-700 active:bg-secondary-800 flex h-12 min-h-[2rem] w-fit cursor-pointer items-center justify-center rounded-md border-2 px-5 py-3 font-semibold text-white shadow transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-opacity-50 disabled:cursor-not-allowed disabled:opacity-50"
  >{text}</a
>
