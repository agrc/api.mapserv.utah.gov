---
import { Header as UDSHeader } from '@ugrc/utah-design-system/src/components/Header.tsx';

const links = [
  {
    key: 'Getting started guide',
    action: {
      url: '/getting-started',
    },
  },
  {
    key: 'Documentation',
    action: {
      url: '/docs',
    },
  },
  {
    key: 'Privacy policy',
    action: {
      url: '/privacy',
    },
  },
];
---

<UDSHeader client:load links={links}>
  <div class="flex h-full grow items-center gap-3">
    <a
      href="/"
      class="flex items-center space-x-2 rounded-md p-2 hover:bg-slate-200"
    >
      <img
        src="/api.svg"
        alt="UGRC API"
        class="hidden h-16 w-16 sm:block"
        role="presentation"
      />
      <h2
        class="font-heading text-4xl font-bold text-slate-700 dark:text-slate-300"
      >
        UGRC API
      </h2>
    </a>
  </div>
</UDSHeader>
